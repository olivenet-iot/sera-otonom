# Sera Otonom - Environment Variables
# Bu dosyayı kopyalayıp .env olarak kaydedin

# TTS MQTT
TTS_MQTT_BROKER=eu1.cloud.thethings.network
TTS_MQTT_USERNAME=your-app-id@ttn
TTS_MQTT_PASSWORD=your-api-key
TTS_APP_ID=your-app-id

# TTS API
TTS_API_KEY=your-api-key

# Weather API
WEATHER_API_KEY=your-openweathermap-key

# Sensor Device EUIs
SENSOR_TEMP_HUM_EUI=0000000000000001
SENSOR_SOIL_EUI=0000000000000002
SENSOR_LIGHT_EUI=0000000000000003

# Relay Device EUIs
RELAY_PUMP_EUI=0000000000000004
RELAY_FAN_EUI=0000000000000005

# App Settings
LOG_LEVEL=INFO
DEBUG=false
